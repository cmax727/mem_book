#main.inwards.colgroup.colgroup1
  %hgroup
  #form_wrap
    %h1 Start Discussion
    = form_for [@group, @discussion], :html => { :id => "start_discussion", :multipart => true } do |f|
      %aside.photo
        = image_tag @user.avatar.url
      = f.label :title
      = f.text_field :title
      = f.label :description
      = f.text_area :description
      = f.submit "Submit"