%li
  .inner
    -# %aside
     
      -# = image_tag group.avatar.url, width: 40, height: 40, alt: ''

    .content
      %h2= link_to group.name, latest_discussions_group_path(group)
      %ul.fence
        %li<
          %span.meter{:'data-value' => 1}
            = group.users.size 
            members
        %li<
          %span.meter{:'data-value' => 1}
            = group.discussions.size
            discussions
        %li<
          %span.meter{:'data-value' => 1} 
            = comments_count(group)
            comments

    %p= group.description 